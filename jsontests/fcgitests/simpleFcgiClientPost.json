[
  {
    "TestName": "FCGI client POST",
    "Description": "Simple fcgi POST using php-fastgi and ATS"
  },
  {
    "create": "externallauncher.launcher",
    "name": "php"
  },
  {
    "action": "php.launch",
    "cmd": "php-fastcgi.sh",
    "env_path": "PHP_CGI",
    "arguments": [
      "start"
    ],
    "name": "php1"
  },
  {
    "create": "externallauncher.launcher",
    "name": "ts"
  },
  {
    "action": "ts.launch",
    "cmd": "bin/trafficserver",
    "env_path": "ATS_EXEC",
    "root_access": true,
    "arguments": [
      "start"
    ],
    "name": "ts1"
  },
  {
    "action": "ts1.scan_for",
    "name": "tsr",
    "keyword": "done"
  },
  {
    "create": "http1.client",
    "name": "fcgi"
  },
  {
    "action": "fcgi.post",
    "url": "http://localhost:9080/html/welcome.php",
    "headers": {
      "Content-Type": "application/x-www-form-urlencoded"
    },
    "data": "name=abc&email=xyz%40abc.mma",
    "name": "resp1"
  },
  {
    "action": "expect",
    "value": "resp1.response_headers.:status",
    "expected": 200,
    "Description": "Status should be 200 OK"
  },
  {
    "action": "expect",
    "value": "resp1.data",
    "expected": "xyz@abc.mma",
    "Description": "Mail id should be same as post(xyz@abc.mma)"
  },
  {
    "action": "execute",
    "execute": "print(resp1.data);"
  },
  {
    "action": "ts.launch",
    "cmd": "bin/trafficserver",
    "env_path": "ATS_EXEC",
    "root_access": true,
    "arguments": [
      "stop"
    ],
    "name": "ts2"
  },
  {
    "action": "ts2.scan_for",
    "name": "tsr",
    "keyword": "done"
  },
  {
    "action": "php.launch",
    "cmd": "php-fastcgi.sh",
    "env_path": "PHP_CGI",
    "arguments": [
      "stop"
    ],
    "name": "php2"
  },
  {
    "action": "php2.scan_for",
    "name": "phpend",
    "keyword": "php-cgi"
  }
]
