[
  {
    "TestName": "FCGI Server and Client POST",
    "Description": "Test fcgi POST using both client and server"
  },
  {
    "create": "externallauncher.launcher",
    "name": "ts"
  },
  {
    "action": "ts.launch",
    "cmd": "trafficserver",
    "path": "/home/gdb/trafficserver/opt/ts7.1.1/bin/",
    "root_access": true,
    "arguments": [
      "start"
    ],
    "name": "ts1"
  },
  {
    "action": "ts1.scan_for",
    "name": "tsr",
    "keyword": "done"
  },
  {
    "create": "fcgi.client",
    "name": "fcgi"
  },
  {
    "create": "fcgi.server",
    "name": "fs"
  },
  {
    "action": "fs.start"
  },
  {
    "action": "waitfor",
    "event": "fs.ServerStarted",
    "name": "fs1",
    "data": ""
  },
  {
    "action": "parallel",
    "list": [
      [
        {
          "action": "fcgi.request",
          "url": "http://localhost:9080/welcome.php",
          "name": "request1"
        },
        {
          "action": "request1.post",
          "url": "http://localhost:9080/welcome.php",
          "headers": {
            "Content-Type": "application/x-www-form-urlencoded"
          },
          "data": "name=abc&email=xyz%40abc.mma",
          "name": "resp1"
        },
        {
          "action": "execute",
          "execute": "print(resp1.headers)"
        },
        {
          "action": "expect",
          "value": "resp1.response_headers.:status",
          "expected": 200,
          "Description": "Status should be 200 OK"
        }
      ],
      [
        {
          "action": "waitfor",
          "event": "fs.FCGI_STDIN",
          "name": "fsrequest1",
          "data": "name=abc&email=xyz%40abc.mma"
        },
        {
          "action": "waitfor",
          "event": "fs.FCGI_STDIN",
          "name": "fsrequest1",
          "data": ""
        },
        {
          "action": "fsrequest1.send_record",
          "request_id": 1,
          "type": "FCGI_STDOUT",
          "data": "Content-type: text/html\r\nContent-Length: 10\r\n\r\nHelloWorld\r\n\r\n",
          "padding_length": 0,
          "version": 1,
          "name": "rec1"
        },
        {
          "action": "fsrequest1.send_record",
          "request_id": 1,
          "type": "FCGI_END_REQUEST",
          "name": "rec2"
        }
      ]
    ]
  },
  {
    "action": "fs.kill",
    "name": "fsk"
  },
  {
    "action": "ts.launch",
    "cmd": "trafficserver",
    "path": "/home/gdb/trafficserver/opt/ts7.1.1/bin/",
    "root_access": true,
    "arguments": [
      "stop"
    ],
    "name": "ts2"
  },
  {
    "action": "ts2.scan_for",
    "name": "tsr",
    "keyword": "done"
  }
]
